{
	"name": "@natlibfi/melinda-rest-api-commons",
	"description": "Shared modules for microservices of Melinda rest api import system",
	"author": {
		"name": "The National Library of Finland"
	},
	"keywords": [],
	"homepage": "https://github.com/natlibfi/melinda-rest-api-commons",
	"bugs": {
		"url": "https://github.com/natlibfi/melinda-rest-api-commons/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:natlibfi/melinda-rest-api-commons.git"
	},
	"license": "AGPL-3.0+",
	"version": "1.0.0",
	"main": "./dist/index.js",
	"engines": {
		"node": ">=10"
	},
	"private": true,
	"scripts": {
		"prepare": "npm run build",
		"check-deps": "npm-check || exit 0",
		"lint": "eslint --fix src",
		"test": "npm run lint && npm run test:base -- src/**/*.spec.js",
		"test:base": "cross-env NODE_ENV=test nyc mocha --require @babel/register",
		"test:dev": "npm run lint:dev && npm run test:base -- src/**/*.spec.js",
		"build": "babel src --source-maps --copy-files --delete-dir-on-start --out-dir=dist --minified",
		"build:dev": "npm run build && npm run check-deps",
		"watch:test": "cross-env DEBUG=1 NODE_ENV=test nodemon -w src --exec 'npm test'",
		"watch:dev": "nodemon -w src --exec 'npm run lint && npm run build'"
	},
	"dependencies": {
		"@natlibfi/melinda-commons": "^7.1.0",
		"amqplib": ">=0.5.5 <1.0.0",
		"http-status": "^1.4.2",
		"moment": "^2.24.0",
		"mongodb": "^3.5.2",
		"rimraf": "^3.0.1",
		"uuid": "^3.4.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.8.4",
		"@babel/core": "^7.8.4",
		"@babel/plugin-syntax-dynamic-import": "^7.8.3",
		"@babel/preset-env": "^7.8.4",
		"babel-eslint": "^10.0.3",
		"babel-plugin-dynamic-import-node": "^2.3.0",
		"babel-plugin-istanbul": "^6.0.0",
		"babel-plugin-rewire": "^1.2.0",
		"chai": "^4.2.0",
		"cross-env": "^7.0.0",
		"eslint": "^6.8.0",
		"eslint-config-xo": ">=0.27.2 <1.0.0",
		"eslint-plugin-import": "^2.20.1",
		"istanbul": ">=0.4.5 <1.0.0",
		"mocha": "^7.0.1",
		"nodemon": "^2.0.2",
		"npm-check": "^5.9.0",
		"nyc": "^15.0.0"
	},
	"eslintConfig": {
		"parser": "babel-eslint",
		"plugins": [
			"import"
		],
		"extends": [
			"xo",
			"plugin:import/errors"
		],
		"rules": {
			"prefer-arrow-callback": [
				"error"
			]
		},
		"env": {
			"mocha": true
		}
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": {
						"node": "10"
					}
				}
			]
		],
		"plugins": [
			"@babel/plugin-syntax-dynamic-import",
			"dynamic-import-node"
		],
		"env": {
			"test": {
				"plugins": [
					"istanbul",
					"rewire"
				]
			}
		}
	},
	"nyc": {
		"exclude": [
			"**/*.spec.js"
		],
		"reporter": [
			"lcov",
			"html"
		],
		"require": [
			"@babel/register"
		],
		"sourceMap": false,
		"instrument": false,
		"lines": 80,
		"statements": 80,
		"functions": 80,
		"branches": 80
	}
}
